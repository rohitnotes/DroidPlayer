<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/texture_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

    <View
        android:id="@+id/full_screen_transparent_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/player_transparent30_color"/>

    <ImageView
        android:id="@+id/iv_center_play"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/droid_player_center_play"/>

    <ProgressBar
        android:id="@+id/loading_view"
        style="@style/LoadingProgressBar"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_tip_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_replay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/player_error_tip"
        android:textColor="@color/player_text_color"
        android:textSize="@dimen/player_text_size"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_replay"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="@dimen/player_center_icon_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/droid_player_replay"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_tip_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_replay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/player_replay_tip"
        android:textColor="@color/player_text_color"
        android:textSize="@dimen/player_text_size"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/bottom_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/player_progress_drawable"/>

    <LinearLayout
        android:id="@+id/ll_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/droid_player_play"/>

        <TextView
            android:id="@+id/tv_current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="00:00"
            android:textColor="@color/player_text_color"
            android:textSize="@dimen/player_text_size"/>

        <SeekBar
            android:id="@+id/sb_current_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="100"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:progress="30"
            android:progressDrawable="@drawable/player_seekbar_drawable"
            android:secondaryProgress="70"
            android:thumb="@drawable/drawable_seekbar_thumb"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/player_text_color"
            android:textSize="@dimen/player_text_size"/>

    </LinearLayout>

</RelativeLayout>