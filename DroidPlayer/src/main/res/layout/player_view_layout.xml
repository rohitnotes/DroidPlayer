<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/player_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/droid_player_back_arrow"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/player_text_color"
            android:textSize="@dimen/player_text_big_size"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_center_play"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/droid_player_center_play"/>

    <ProgressBar
        android:id="@+id/loading_view"
        style="@style/LoadingProgressBar"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_replay"
        android:layout_width="@dimen/player_center_icon_size"
        android:layout_height="@dimen/player_center_icon_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/droid_player_replay"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_replay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/player_replay_tip"
        android:textColor="@color/player_text_color"
        android:textSize="@dimen/player_text_size"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/bottom_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/player_progress_drawable"/>

    <LinearLayout
        android:id="@+id/ll_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/player_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:src="@mipmap/droid_player_play"/>

        <TextView
            android:id="@+id/tv_current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/player_text_color"
            android:textSize="@dimen/player_text_size"/>

        <SeekBar
            android:id="@+id/sb_current_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="100"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:progress="30"
            android:progressDrawable="@drawable/player_seekbar_drawable"
            android:secondaryProgress="70"
            android:thumb="@drawable/drawable_seekbar_thumb"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/player_text_color"
            android:textSize="@dimen/player_text_size"/>

        <ImageView
            android:id="@+id/iv_fullscreen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:src="@mipmap/droid_player_enter_fullscreen"/>

    </LinearLayout>

</RelativeLayout>